extends base

block site_body

  // Intro Hero
  section#home
    .intro-body
      .container
        .row.blurb
          .col-md-6.col-md-offset-3
            h1 
              span.pink Computer Lab 
              | is a software consultancy in New York City that helps organizations build
              | digital products. 
  // About Section
  section#about.content-section.last
    .container
      .row
        .col-md-6.col-md-offset-3.col-xs-12
          h2.section-title.wow.fadeIn About
          .about.wow.slideInUp
            p
              | We are a group of developers, designers and engineers 
              | who met on the internet and work together in New York City.
          .about.wow.slideInUp
            p
              | We specialize in developing data-driven applications
              | with intensive UIs. We're a full-service dev shop that can work with your team
              | to make sure you're solving the right problems.
          .about.wow.slideInUp
            p Our team is led by  
              span
                a(target='_blank' href='https://ptsteadman.com/') Patrick Steadman
                | , 
                a(target='_blank' href='http://zachtaylor.me') Zachary Taylor
                |  and 
                a(target='_blank' href='http://maxhfowler.com/') Max Fowler.
          .about.wow.slideInUp
            p 
              span
                | Our office in 
                a(target='_blank' href='https://www.google.com/maps/place/Computer+Lab/@40.720358,-74.0059364,19.49z/data=!4m13!1m7!3m6!1s0x89c2598ac53690e1:0x684ebca8b026f25c!2s260+W+Broadway,+New+York,+NY+10013!3b1!8m2!3d40.7206119!4d-74.0056692!3m4!1s0x0:0x29ce7dd0dcc4a944!8m2!3d40.7206119!4d-74.005669') Tribeca 
                | is open to all, contact us and set up a time to
                | stop by. 
          .about.row.wow.slideInUp    
            p
              a.btn.btn-default.email(href='mailto:hi@computerlab.io?Subject=Inquiry') Email
  // Case study
  section#case-study.content-section.alt
    .container 
      .row
        .col-md-5.col-md-offset-1.v-center.col-xs-12
          img(src="").wow.fadeIn
        .col-md-5.col-xs-12
           h4.wow.fadeIn Case Study
           h1.section-title.wow.fadeIn
             a(href=config.feature_case_path)=config.feature_case_title
           h3=config.feature_case_lede
           p.wow.fadeIn=config.feature_case_excerpt
           a.btn.btn-default.over-dark.wow.fadeIn.read-more(target='_blank' href=config.feature_case_project_path) View
           a.btn.btn-default.over-dark.wow.fadeIn.read-more(href=config.feature_case_path) Read More
  section#feature-post.content-section.alt
    .container
      .row
        .col-md-6.col-md-offset-3.col-xs-12
          h1.section-title.wow.fadeIn 
            a(href=config.feature_note_path)=config.feature_note_title
          h5.wow.fadeIn=config.feature_note_author + ' - '
            span.date=config.feature_note_date
          p.wow.fadeIn=config.feature_note_excerpt
          a.btn.btn-default.over-dark.wow.fadeIn.read-more(href=config.feature_note_path) Read More

