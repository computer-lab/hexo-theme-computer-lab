extends base

block site_body
  .hero
    .container-fluid
      .row
        .col-md-6.col-xs-12.canvas-container.full-page.no-padding
          canvas#art
          .copy
            h1= config.subtitle
            p= config.blurb
            .row.flex.details
              .col-md-6.vertically-centered.flex
                .float-left.vertically-centered
                  img(src="/images/office-phone.svg")
                .float-left
                  a(href='mailto:ideas@computerlab.io') hi@computerlab.io
                  p= theme.phone
              .col-md-6.mobile-hidden.vertically-centered.flex
                .float-left.vertically-centered
                  img(src="/images/building.svg")
                .float-left
                  p= theme.address_1
                  p= theme.address_2
                  p= theme.address_3
        .col-md-6.col-xs-12.full-page.flex.no-padding.computer
          .centered
            img(src="/images/db_computer.png")
            img(src="/images/db_computer.png")
            img(src="/images/db_computer.png")
            img(src="/images/db_computer.png")
      .row
        .col-xs-12.competencies.full-page.flex.no-padding
          .centered
            h2 Our Competencies
            p We can #[a(href="#" data-toggle="popover" data-trigger="focus" data-placement="bottom" tabindex="0" role="button" title="Web Development" data-content="We <b>build websites</b> using .NET, Node, and Python stacks.  We can help you select the right stack for your project, or start working with an existing site.  We're domain experts with the stacks that we work with.") build your website].
            p We can #[a(href="#") understand your data.]
            p We can #[a(href="#") develop your brand].
            p We can #[a(href="#") make people care about you].
        .col-xs-12.mobile-footer.details
          .row 
            .col-xs-12
              a(href='mailto:ideas@computerlab.io') hi@computerlab.io
              p= theme.phone
              p= theme.address_1
              p= theme.address_2
              p= theme.address_3




            

  //!= page.content
